        <HBox alignment="CENTER">
            <Button
                    fx:id="pauseButton"
                    text="â¸"
                    style="
                    -fx-font-size: 2em;
                    -fx-text-fill: white;
                    -fx-background-color: linear-gradient(to bottom right, #00f42f, #04cf13);
                    -fx-min-width: 3em;
                    -fx-min-height: 3em;
                    -fx-max-width: 3em;
                    -fx-max-height: 3em;
                    -fx-background-radius: 3em;
                "
            />
        </HBox>
    </VBox>
    <MapView
        fx:id="mapView"
        HBox.hgrow="ALWAYS"
    />
